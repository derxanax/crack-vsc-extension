{
  "comments": {
    "blockComment": ["//", "//"]
  },
  "brackets": [
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*//",
      "end": "^\\s*//"
    }
  },
  "wordPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
} 